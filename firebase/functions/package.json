{
  "name": "@loginov-rocks/portfolio-firebase",
  "version": "1.1.2",
  "description": "Firebase",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run clean:build && npm run build:sources && npm run clean:tests",
    "build:sources": "babel src -d lib --extensions .ts",
    "clean:build": "rimraf lib",
    "clean:coverage": "rimraf coverage",
    "clean:tests": "rimraf lib/**/*.test.js",
    "coverage": "npm run clean:coverage && npm run test:coverage",
    "deploy": "firebase deploy --only functions",
    "lint": "eslint --ext ts src",
    "logs": "firebase functions:log",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:update": "npm test -- --updateSnapshot",
    "typecheck": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loginov-rocks/Portfolio.git"
  },
  "author": "Danila Loginov <danila@loginov.rocks> (https://loginov.rocks)",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/loginov-rocks/Portfolio/issues"
  },
  "homepage": "https://loginov-rocks.github.io/Portfolio/",
  "engines": {
    "node": "14"
  },
  "dependencies": {
    "actions-on-google": "^2.12.0",
    "busboy": "^0.3.1",
    "cors": "^2.8.5",
    "firebase-admin": "^8.11.0",
    "firebase-functions": "^3.6.1",
    "node-vibrant": "^3.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/busboy": "^0.2.3",
    "@types/cors": "^2.8.10",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "jest-express": "^1.12.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ]
  }
}
